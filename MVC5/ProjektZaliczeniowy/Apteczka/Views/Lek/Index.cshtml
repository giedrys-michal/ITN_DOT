@model PagedList.IPagedList<Apteczka.Models.LekModel>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "Leki";
}

<h2>Lista leków</h2>

<p>
    @Html.ActionLink("Dodaj nowy lek", "Create")
</p>

@using (Html.BeginForm("Index", "Lek", FormMethod.Get))
{
    <p>
        Przeszukaj listę: @Html.TextBox("SearchString", ViewBag.CurrentFilter as string, htmlAttributes: new { @class = "form-control" })
        <input type="submit" value="Szukaj" class="btn btn-default " />
    </p>
}

<table class="table">
    <tr>
        <th>
            @Html.ActionLink("Nazwa Leku", "Index", new { sortOrder = ViewBag.NameSortParam, currentFilter = ViewBag.CurrentFilter })
        </th>
        <th>
            @Html.ActionLink("Termin Ważności", "Index", new { sortOrder = ViewBag.DateSortParam, currentFilter = ViewBag.CurrentFilter })
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().Kategoria)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().Forma)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().Ilosc)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().Producent)
        </th>
        <th>
            Nazwa Apteczki
        </th>
        <th>
            Akcja
        </th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.ActionLink(item.Nazwa, "Details", new { id = item.ID })
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.TerminWaznosci)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Kategoria)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Forma)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Ilosc)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Producent)
    </td>
    <td>
        @Html.ActionLink(item.Apteczka.Nazwa, "Details", "Apteczka", new { id = item.ApteczkaID }, "")
    </td>
    <td>
        @Html.ActionLink("Edytuj", "Edit", new { id = item.ID }) |
        @Html.ActionLink("Szczegóły", "Details", new { id = item.ID }) |
        @Html.ActionLink("Usuń", "Delete", new { id = item.ID })
    </td>
</tr>
    }

</table>

<br />
Strona @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) z @Model.PageCount

@Html.PagedListPager(Model, page => Url.Action("Index", new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
